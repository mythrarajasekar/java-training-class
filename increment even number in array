import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        int n = sc.nextInt();
        int [] [] matrix = new int [n] [n];
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                matrix[i][j] = sc.nextInt();
            }
        }
        
        
        System.out.println("\n Matrix:");
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                if (matrix[i][j] % 2 == 0)
                {
                    matrix[i][j] += 1;
                }
                System.out.print(matrix[i][j] + " ");
            }
            System.out.println();
        }

    }
}

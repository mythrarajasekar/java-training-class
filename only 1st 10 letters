import java.util.*;

class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        System.out.print("Enter a string: ");
        String str = sc.nextLine();
        
        StringBuilder sb = new StringBuilder(str);
        if (str.length() >= 10){
            sb.setLength(10);
            
        }
        System.out.println(str);
    }
}
